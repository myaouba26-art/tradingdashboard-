import streamlit as st
import matplotlib.pyplot as plt
import numpy as np

# Titre
st.title("üöÄ Tableau de bord Trading")

st.write("Bienvenue dans mon application de trading bas√©e sur l'analyse fondamentale et graphique.")

# Exemple de signal fictif
st.subheader("Exemple de signal fictif")
st.success("Signal actuel : Achat fort sur EUR/USD")

# G√©n√©rer des donn√©es fictives (prix simul√©s)
x = np.linspace(0, 10, 100)
y = np.sin(x) + np.random.normal(0, 0.1, 100)

# Afficher un graphique
fig, ax = plt.subplots()
ax.plot(x, y, label="Prix EUR/USD")
ax.legend()
st.pyplot(fig)
